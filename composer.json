{
    "name": "code-distortion/staticall",
    "description": "Run class methods both statically and non-statically",
    "keywords": [
        "static methods"
    ],
    "homepage": "https://github.com/code-distortion/staticall",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Tim Chandler",
            "email": "tim@code-distortion.net",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "7.0.* | 7.1.* | 7.2.* | 7.3.* | 7.4.* | 8.0.* | 8.1.* | 8.2.* | 8.3.*"
    },
    "require-dev": {
        "infection/infection": "^0.26.19",
        "phpstan/phpstan": "^0.9 | ^0.10 | ^0.11 | ^0.12 | ^1.0",
        "phpunit/phpunit": "~4.8 | ^5.0 | ^6.0 | ^7.0 | ^8.0 | ^9.0 | ^10.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "CodeDistortion\\Staticall\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodeDistortion\\Staticall\\Tests\\": "tests"
        }
    },
    "scripts": {
        "infection": "vendor/bin/infection --threads=max --show-mutations",
        "phpcbf": "vendor/bin/phpcbf",
        "phpcs": "vendor/bin/phpcs",
        "phpstan": "vendor/bin/phpstan.phar analyse --level=max",
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
